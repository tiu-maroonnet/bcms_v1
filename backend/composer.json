{
  "name": "trira/bcms",
  "type": "project",
  "require": {
    "php": "^8.5",
    "laravel/framework": "^12.0",
    "laravel/sanctum": "^4.0",
    "laravel/horizon": "^6.0",
    "laravel/octane": "^2.4",
    "predis/predis": "^2.2",
    "guzzlehttp/guzzle": "^7.9",
    "ext-pcntl": "*",
    "ext-posix": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "pestphp/pest": "^2.0"
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  }
}